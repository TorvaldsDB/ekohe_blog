<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :title, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :title, class: "form-control-plaintext form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :content, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :content, class: "form-control-plaintext form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :published, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.check_box :published, class: "form-control-plaintext" %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :published_at, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <div class="form-group">
        <div class='input-group date' id='datetimepicker'>
          <%= form.text_field :published_at, class: "form-control" %>
          <span class="input-group-addon">
              <span class="glyphicon glyphicon-time"></span>
          </span>
        </div>
      </div>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-12">
      <%= form.submit "Save", class: "btn btn-xs btn-primary" %>
      <%= link_to 'Back', articles_path, class: "btn btn-xs btn-primary" %>
    </div>
  </div>
<% end %>
<script type="text/javascript">
$(function () {
  $('#datetimepicker').datetimepicker({
    viewMode: 'years',
    format: 'YYYY-MM-DD'
  });
});
</script>
